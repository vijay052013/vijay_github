{
  "name": "capapp",
  "version": "0.0.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "Business Application",
  "engines": {
    "node": "^18"
  },
  "dependencies": {
    "@sap/cds": "^6.8",
    "@sap/audit-logging": "5.7.1",
    "hdb": "^0.19",

    "@sap/xssec": "^3",
    "passport": "^0.4.1",

    "debug": "^4.3",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.4"
  },
  "sapux": [
    "app/resources/fiori"
  ],
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "src": "db",
          "options": {
            "model": [
              "db",
              "db/data-config",
              "db/data-test",
              "srv2",
              "app",
              "srv"
            ]
          }
        },
        {
          "for": "nodejs",
          "src": "srv",
          "options": {
            "model": [
              "db",
              "db/data-config",
              "db/data-test",
              "app",
              "srv"
            ]
          }
        }
        ,
        {
          "for": "nodejs",
          "src": "srv2",
          "options": {
            "model": [
              "db",
              "db/data-config",
              "db/data-test",
              "app",
              "srv2"
            ]
          }
        }
      ]
    },
    "requires": {
      "auth": {
        "restrict_all_services": false
      }
      ,
      "db": {
        "[production]": {
          "kind": "hana-cloud"
          ,"model": [
            "db/data-config",
            "db/data-test"
          ]
        },
        "[development]": {
          "kind": "sql"
          ,"model": [
            "db/data-config",
            "db/data-test"
          ]
        },
        "model": [
          "db",
          "srv"
          ,"srv2"
        ]
      }
    }
  }
}
